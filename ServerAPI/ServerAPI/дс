# === HTTP Redirects for all domains to HTTPS ===
server {
    listen 80;
    server_name jumpwithjenny.com www.jumpwithjenny.com api.jumpwithjenny.com;
    return 301 https://jumpwithjenny.com$request_uri;
}

# === HTTPS: Main Website ===
server {
    listen 443 ssl;
    server_name jumpwithjenny.com www.jumpwithjenny.com;

    root /var/www/jumpwithjenny/client-app/dist;
    index index.html;

    ssl_certificate /etc/letsencrypt/live/jumpwithjenny.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/jumpwithjenny.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    client_max_body_size 100M;
    keepalive_timeout 30s;

    # Redirect www to non-www
    if ($host = 'www.jumpwithjenny.com') {
        return 301 https://jumpwithjenny.com$request_uri;
    }

    # Security headers & CSP
    add_header Content-Security-Policy "
      default-src 'self';
      font-src 'self' https://fonts.gstatic.com https://fonts.googleapis.com https://cdn.jsdelivr.net https://cdnjs.cloudflare.com data:;
      style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com;
      style-src-elem 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com;
      script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdnjs.cloudflare.com https://accounts.google.com https://connect.facebook.net https://www.googletagmanager.com https://embeds.iubenda.com https://maps.googleapis.com;
      script-src-elem 'self' https://www.googletagmanager.com https://embeds.iubenda.com https://maps.googleapis.com;
      img-src 'self' data: https: https://www.facebook.com;
      connect-src 'self' https://jumpwithjenny.com https://api.jumpwithjenny.com https://localhost:7024 https://accounts.google.com https://*.googleusercontent.com https://graph.facebook.com https://www.facebook.com;
      frame-src 'self' https://www.google.com https://accounts.google.com https://www.facebook.com https://staticxx.facebook.com;
    " always;

    add_header Cross-Origin-Opener-Policy "same-origin-allow-popups" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;

    autoindex off;
    disable_symlinks on;

    gzip on;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;
    gzip_min_length 1000;
    gzip_proxied any;
    gzip_vary on;
    gzip_comp_level 6;

    # Static files
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff2?|ttf|eot|otf|webmanifest|json)$ {
        try_files $uri =404;
        expires 1y;
        access_log off;
        add_header Cache-Control "public, immutable";
        add_header Access-Control-Allow-Origin "*";
    }

    location = /favicon_v2.ico {
        alias /var/www/jumpwithjenny/client-app/build/favicon_v2.ico;
        access_log off;
        log_not_found off;
        expires 1d;
        add_header Cache-Control "public";
        try_files $uri =204;
    }

    # Proxy to .NET backend
    location /api/ {
        proxy_pass http://localhost:7024/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "keep-alive";
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_read_timeout 300s;
    }

    # SPA routing
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Deny sensitive files
    location ~* /\.(env|git|ht|docker|config)|(/composer\.|/package\.json|/yarn\.lock) {
        deny all;
        access_log off;
        log_not_found off;
        return 404;
    }

    # Error pages
    error_page 404 /index.html;
    error_page 500 502 503 504 =500 /50x.html;

    location = /50x.html {
        internal;
        return 204 '{}';
        add_header Content-Type application/json;
    }
}

# === HTTPS: API Subdomain ===
server {
    listen 443 ssl;
    server_name api.jumpwithjenny.com;

    ssl_certificate /etc/letsencrypt/live/api.jumpwithjenny.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.jumpwithjenny.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    client_max_body_size 100M;
    keepalive_timeout 30s;

    location / {
        proxy_pass http://localhost:7024/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "keep-alive";
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_read_timeout 300s;
        
        add_header Cross-Origin-Opener-Policy "same-origin-allow-popups" always;
    }
}
